<p id="notice"><%= notice %></p>

<h1>Sales</h1>

<div class="panel panel-default">
  <div class="panel-heading">Sales (<%= @sales.count %>) </div>
    <table class="table table-hover">

      <thead>
        <tr>
          <th>#</th>
          <th>Client</th>
          <th>Product</th>          
          <th>Quantity</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% i = 0%>
        <% @sales.each do |sale| %>
          <tr>
            <th><%= i += 1 %></th>
            <td><%= Client.find(sale.client).description %></td>
            <td><%= Product.find(sale.product).title %></td>
            <td><%= sale.quantity %></td>
            <td>
              <%= fa_icon "info" %>
              <%= link_to 'Show', sale %>
              |
              <%= fa_icon "pencil-square-o" %>
              <%= link_to 'Edit', edit_sale_path(sale) %>
              |
              <%= fa_icon "trash-o" %>
              <%= link_to 'Delete', sale, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>

    </table>
  </div>
</div>

<%= link_to ' New Sale', new_sale_path, :class => 'btn btn-primary fa fa-plus' %>
