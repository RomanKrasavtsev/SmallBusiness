<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<div class="entry">
     <div class="panel panel-default">
        <div class="panel-heading">The best months for new account development</div>
        <%= area_chart @clients_months.count, { "discrete": true } %>
    </div>
</div>

<div class="entry">
    <div class="panel panel-default">
        <div class="panel-heading">Clients (<%= @clients.count %>) </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Description</th>
                    <th>Created</th>
                    <th>Updated</th>
                </tr>
            </thead>
            <tbody>
                <% i = 0%>
                <% @clients.each do |client| %>
                    <tr>
                        <th><%= i += 1 %></th>
                        <td> <%= client.description %> </td>       
                        <td> <%= client.created_at %> </td>       
                        <td> <%= client.updated_at %> </td>                    
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

<div class="entry">
    <% @clients_months.keys.sort.each do |client| %>
        <%= client %> <br>
    <% end %>
</div>