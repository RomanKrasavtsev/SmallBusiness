<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<h1>Dashboard</h1>

<div class="entry">
    <h3>Clients (<%= @clients.count %>)</h3>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            <% i = 0%>
            <% @clients.each do |client| %>
                <tr>
                    <th><%= i += 1 %></th>
                    <td> <%= client.description %> </td>                    
                </tr>
            <% end %>
        </tbody>
    </table>
</div>