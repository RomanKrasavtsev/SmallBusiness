<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<div class="entry">
     <div class="panel panel-default">
        <div class="panel-heading">New clients by day </div>
        <%= line_chart Client.group_by_month(:created_at, range: 1.year.ago.midnight..Time.now).count %>
    </div>
</div>

<div class="entry">
    <div class="panel panel-default">
        <div class="panel-heading">Clients (<%= @clients.count %>) </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <% i = 0%>
                <% @clients.each do |client| %>
                    <tr>
                        <th><%= i += 1 %></th>
                        <td> <%= client.description %> </td>                    
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
