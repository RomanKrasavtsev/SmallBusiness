<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<div class="entry">
    <div class="panel panel-default">
        <div class="panel-heading">Clients (<%= @clients.count %>) </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    <% i = 0%>
                    <% @clients.each do |client| %>
                        <tr>
                            <th><%= i += 1 %></th>
                            <td> <%= client.description %> </td>                    
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>